<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to "test" , test_url %> |
      <%= link_to "restaurants" , restaurants_url %> |
      <%= link_to "crud" , crud_read_all_url %> |
      <%= link_to  "games", games_path %>

      <% if user_signed_in? -%>
        <%= link_to  "sign out", destroy_user_session_path, method: :delete, :style=>'float: right;'%>
      <% else %>
        <%= link_to  "sign in", new_user_session_path, :style=>'float: right;'%>
      <% end -%>
    </nav>

    <hr>

    <%= yield %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
